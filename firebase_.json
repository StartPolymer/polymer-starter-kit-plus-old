{
  "public": "deploy",
  "rewrites": [ {
    "source": "**",
    "destination": "/index.html"
  } ],
  "headers": [ {
    "source" : "**/*.@(css|html|js|json|txt|xml)",
    "headers" : [ {
      "key" : "Cache-Control",
      "value" : "max-age=315360000"
    } ]
    }, {
    "source" : "**/*.@(gif|jpg|jpeg|png|svg|webp)",
    "headers" : [ {
      "key" : "Cache-Control",
      "value" : "max-age=315360000"
    } ]
    }, {
    "source" : "**/404.html",
    "headers" : [ {
      "key" : "Cache-Control",
      "value" : "max-age=300"
    } ]
    }, {
    "source" : "**/humans.txt",
    "headers" : [ {
      "key" : "Cache-Control",
      "value" : "max-age=300"
    } ]
    }, {
    "source" : "**/index.html",
    "headers" : [ {
      "key" : "Cache-Control",
      "value" : "max-age=300"
    } ]
    }, {
    "source" : "**/robots.txt",
    "headers" : [ {
      "key" : "Cache-Control",
      "value" : "max-age=300"
    } ]
  } ]
}
